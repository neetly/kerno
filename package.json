{
  "name": "@kerno/repo",
  "private": true,
  "workspaces": [
    "./packages/*",
    "./websites/*"
  ],
  "scripts": {
    "build": "yarn workspaces foreach --topological-dev run build",
    "clean": "yarn workspaces foreach --topological-dev run clean",
    "lint": "eslint --max-warnings 0 . && prettier --check .",
    "lint:fix": "eslint --max-warnings 0 --fix . && prettier --write ."
  },
  "devDependencies": {
    "@neetly/eslint-config": "^0.5.1",
    "@neetly/tsconfig": "^0.3.0",
    "@prettier/plugin-xml": "^3.1.1",
    "eslint": "^8.46.0",
    "prettier": "^3.0.0",
    "typescript": "^5.1.6"
  },
  "packageManager": "yarn@4.0.0-rc.48"
}
